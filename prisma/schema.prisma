generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  slug       String   @unique
  content    String
  tags       Tag[]    @relation("PostTags")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Tag {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  color      String?
  posts      Post[]   @relation("PostTags")
}